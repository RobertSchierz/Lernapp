<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learngroups">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/grouplist_creator_member_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="false"
            android:gravity="center|end"
            android:paddingTop="20dp"
            android:paddingRight="6dp"
            android:paddingBottom="10dp"
            android:switchPadding="5dp"
            android:text="@string/group_list_switchtext"
            android:textColor="@android:color/darker_gray"
            android:textColorLink="@color/colorAccent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/groupllist_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/learngroup_actionbutton"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@drawable/add_group"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="center"
        />


</android.support.constraint.ConstraintLayout>